<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_width="match_parent" android:text="@string/post_title" android:textSize="20sp"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/textView1" android:layout_alignLeft="@+id/textView1" android:layout_alignRight="@+id/textView1" android:id="@+id/NewPostTitle"></EditText>
    <TextView android:id="@+id/textView2" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/NewPostTitle" android:layout_alignLeft="@+id/NewPostTitle" android:layout_alignRight="@+id/NewPostTitle" android:text="@string/post_message" android:textSize="20sp"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/textView2" android:layout_alignLeft="@+id/textView2" android:layout_alignRight="@+id/textView2" android:layout_above="@+id/button1" android:inputType="textMultiLine" android:gravity="top" android:id="@+id/NewPostContent"></EditText>
    <Button android:text="@string/post_it" android:layout_alignParentBottom="true" android:id="@+id/button1" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20sp" android:onClick="Post"></Button>
</RelativeLayout>
